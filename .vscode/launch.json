    "version": "0.2.0",
    "configurations": [
        {
            "name": "Express Server Attach",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "address": "localhost",
            "port": 9229,
            "localRoot": "${workspaceFolder}/server",
            "remoteRoot": "${workspaceFolder}/server"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}"
        }
    ]
}